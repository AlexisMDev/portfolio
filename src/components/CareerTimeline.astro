---
const jobs = [
	{
		company: "Réseau Canopé",
		role: "Concepteur - développeur d'applications",
		period: "Décembre 2018 - Novembre 2024",
		description:
			"Développement de la plateforme nationale Cpro Éducation, solution adaptée de gestion, de suivi et de validation des compétences au service de la formation professionnelle.",
	},
	{
		company: "Réseau Canopé",
		role: "Développeur - intégrateur web en alternance",
		period: "Octobre 2017 - Septembre 2018",
		description: "Refonte graphique et ergonomique d’une application qui gère un catalogue de produits et de services.",
	},
];
---

<ul class="timeline timeline-vertical px-6 py-12">
	{
		jobs.map((job) => (
			<li class="min-h-[140px]">
				<div class="timeline-start text-sm text-neutral-content">{job.period}</div>
				<div class="timeline-middle">
					<div class="w-4 h-4 bg-primary rounded-full shadow-md shadow-primary/30" />
				</div>
				<div class="timeline-end timeline-box  bg-base-200 shadow-md border border-base-300">
					<h3 class="text-lg font-semibold">{job.role}</h3>
					<p class="text-sm text-gray-500 italic">{job.company}</p>
					<p class="mt-2 text-sm leading-relaxed">{job.description}</p>
				</div>
				<hr />
			</li>
		))
	}
</ul>
