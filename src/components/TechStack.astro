---
import { getIconBySlug } from "../lib/simpleIcons";

const techs = [
	{ name: "Astro", slug: "astro" },
	{ name: "React", slug: "react" },
	{ name: "JavaScript", slug: "javascript" },
	{ name: "TypeScript", slug: "typescript" },

	{ name: "TailwindCSS", slug: "tailwindcss" },
	{ name: "DaisyUI", slug: "daisyui" },
	{ name: "Bootstrap", slug: "bootstrap" },

	{ name: "Node.js", slug: "nodedotjs" },
	{ name: "Express", slug: "express" },
	{ name: "PHP", slug: "php" },

	{ name: "MySQL", slug: "mysql" },
	{ name: "MariaDB", slug: "mariadb" },
	{ name: "PostgreSQL", slug: "postgresql" },

	{ name: "Git", slug: "git" },
	{ name: "Docker", slug: "docker" },
	{ name: "GitHub Actions", slug: "githubactions" },
];

const icons = techs.map((tech) => ({
	...tech,
	icon: getIconBySlug(tech.slug),
}));
---

<section id="techs" class="max-w-4xl mx-auto px-4 py-12 reveal opacity-0 translate-y-4 transition-all duration-700">
	<h2 class="text-3xl font-bold mb-4">Ma stack technique</h2>
	<div class="flex flex-wrap justify-center gap-6 py-8">
		{
			icons.map(
				({ name, icon }) =>
					icon && (
						<div class="flex flex-col items-center space-y-2 w-20">
							<svg
								role="img"
								viewBox="0 0 24 24"
								fill={`#${icon.hex}`}
								class="w-12 h-12"
								aria-label={name}
								xmlns="http://www.w3.org/2000/svg"
							>
								<path d={icon.path} />
							</svg>
							<span class="text-sm text-center">{name}</span>
						</div>
					)
			)
		}
	</div>
</section>
